@model CinemaViewModel

@{
	ViewData["Title"] = "Details";
}


<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1 class="text-center mt-2">
				Edit @Model.Name Records
			</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				


					<input asp-for="Id" type="hidden" />

					<div class="form-class mt-2">
						<label class="fw-bold">Cinema Logo Preview:</label>
						<img id="ProfilePicturePreview" class="rounded-circle mx-4" style="width: 200px; height: 200px; ; object-fit: cover;"/>
					</div>

					<div class="form-class mt-2" hidden>
						<label asp-for="CinemaLogo" class="fw-bold"></label>
						<input asp-for="CinemaLogo" class="form-control" readonly/> 
						<span asp-validation-for="CinemaLogo" class="text-danger"></span>
					</div>
					<div class="form-class mt-2">
						<label asp-for="@Model.Name" class="fw-bold"></label>
						<input type="text" asp-for="@Model.Name" class="form-control" readonly /> 
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
					</div>
					<div class="form-class mt-2">
						<label asp-for="@Model.Description" class="fw-bold"></label>
						<input asp-for="@Model.Description" class="form-control" readonly /> 
						<span asp-validation-for="@Model.Description" class="text-danger"></span>
					</div>

					<div class="form-class mt-4">

					<a asp-action="Index" class="btn btn-outline-info"><i class="fa-solid fa-circle-arrow-left"></i> Back to list</a>
					<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary float-end"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
					</div>
				

			</div>

		</div>

	</div>
</div>



@section Scripts {
				<script>
						 $(document).ready(function () {
								var output = document.getElementById('ProfilePicturePreview');
							output.src = $("#CinemaLogo").val();
						})
				</script>			
}