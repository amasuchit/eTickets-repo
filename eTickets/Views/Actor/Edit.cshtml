@model ActorViewModel

@{
	ViewData["Title"] = "Edit";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1 class="text-center mt-2">
				Edit @Model.FullName's Record
			</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="Edit" asp-controller="Actor" method="Post">

					<input type="hidden" asp-action="Id" />

					<div class="form-class mt-2">
						<label class="fw-bold">Profile Picture Preview:</label>
						<img id="ProfilePicturePreview" class="rounded-circle mx-4" style="width: 200px; height: 200px; ; object-fit: cover;"/>
					</div>

					<div class="form-class mt-2">
						<label asp-for="ProfilePictureURL" class="fw-bold"></label>
						<input asp-for="ProfilePictureURL" class="form-control" /> 
						<span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
					</div>
					<div class="form-class mt-2">
						<label asp-for="@Model.FullName" class="fw-bold"></label>
						<input type="text" asp-for="@Model.FullName" class="form-control" /> 
						<span asp-validation-for="@Model.FullName" class="text-danger"></span>
					</div>
					<div class="form-class mt-2">
						<label asp-for="@Model.Bio" class="fw-bold"></label>
						<input asp-for="@Model.Bio" class="form-control"> 
						<span asp-validation-for="@Model.Bio" class="text-danger"></span>
					</div>

					<div class="form-class mt-2">
						@* <input type="submit" class="btn btn-outline-success float-end" value="Create" /> *@
					<button type="submit" class="btn btn-outline-success float-end"><i class="fa-solid fa-pen-to-square"></i> Update</button>
					<a asp-action="Index" class="btn btn-outline-info"><i class="fa-solid fa-circle-arrow-left"></i> Back to list</a>
					</div>
				</form>
				</div>

		</div>

	</div>
</div>



@section Scripts {
		<script>
				 $(document).ready(function () {
						var output = document.getElementById('ProfilePicturePreview');
					output.src = $("#ProfilePictureURL").val();
				})
					$("#ProfilePictureURL").on("change", function () {
						var output = document.getElementById('ProfilePicturePreview');
					output.src = $(this).val();
				})
		</script>			
}
