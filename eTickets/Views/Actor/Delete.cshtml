
@model ActorViewModel

@{
    ViewData["Title"] = "Delete";
}




<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1 class="text-center mt-2">
				Do you really want to delete data of @Model.FullName?
			</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="Delete" asp-controller="Actor" method="Post" asp-route-id="@Model.Id">
					@Html.AntiForgeryToken()
					<div class="form-class mt-2">
						<label class="fw-bold">Profile Picture Preview:</label>
						<img id="ProfilePicturePreview" class="rounded-circle mx-4" style="width: 200px; height: 200px; ; object-fit: cover;"/>
					</div>

					<div class="form-class mt-2" hidden>
						<label asp-for="ProfilePictureURL" class="fw-bold"></label>
						<input asp-for="ProfilePictureURL" class="form-control" readonly /> 
						<span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
					</div>

					<div class="form-class mt-2">
						<label asp-for="@Model.FullName" class="fw-bold"></label>
						<input type="text" asp-for="@Model.FullName" class="form-control" readonly/> 
						<span asp-validation-for="@Model.FullName" class="text-danger"></span>
					</div>
					<div class="form-class mt-2">
						<label asp-for="@Model.Bio" class="fw-bold"></label>
						<input asp-for="@Model.Bio" class="form-control" readonly> 
						<span asp-validation-for="@Model.Bio" class="text-danger"></span>
					</div>
				<div class="form-class mt-4 text-center">
						<a asp-controller="Actor" asp-action="Index" class="btn btn-outline-info mx-2"> <i class="fa-solid fa-circle-arrow-left"></i> No, Back to list</a>
						<a asp-controller="Actor" asp-action="Edit" asp-route-id=@Model.Id class="btn btn-outline-primary"> <i class="fa-solid fa-pen-to-square"></i> Will Edit Instead</a>
					<button type="submit" class="btn btn-outline-danger mx-2"><i class="fa-solid fa-trash"></i> Delete</button>
					</div>
					</form>
			</div>

		</div>

	</div>
</div>
</div>


@section Scripts {
			<script>
					 $(document).ready(function () {
							var output = document.getElementById('ProfilePicturePreview');
						output.src = $("#ProfilePictureURL").val();
					})



			</script>			
}