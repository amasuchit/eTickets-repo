@model ProducerViewModel

@{
	ViewData["Title"] = "Update Producer";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="my-4 text-center">
	<h1>Edit Producer's Record</h1>
</div>


<div class="content-wrapper">
	<div class="col-md-8 offset-2">
		<form asp-action="Edit" asp-controller="Producer" method="Post">
			<input type="hidden" asp-for="Id" />
			<div class="form-class mt-2">
						<label class="fw-bold">Profile Picture Preview:</label>
						<img id="ProfilePicturePreview" class="rounded-circle mx-4" style="width: 200px; height: 200px; ; object-fit: cover;"/>
					</div>
		<div class="form-group mt-3">
			<label asp-for="ProfilePictureURL" class="fw-bold"></label>
			<input type="text" asp-for="ProfilePictureURL" class="form-control"/>
			<span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
		</div>
		<div class="form-group mt-3">
			<label asp-for="FullName" class="fw-bold"></label>
			<input type="text" asp-for="FullName" class="form-control"/>
			<span asp-validation-for="FullName" class="text-danger"></span>
		</div>
		<div class="form-group mt-3">
			<label asp-for="Bio" class="fw-bold"></label>
				@* <input type="text" asp-for="Bio" class="form-control"/> *@
			<textarea asp-for="Bio" rows="3" class="form-control"></textarea>
			<span asp-validation-for="Bio" class="text-danger"></span>
		</div>

		<div class="mt-4">
			<button type="submit" class="btn btn-outline-success float-end"> <i class="fa-solid fa-pen-to-square"></i> Update</button>
			<a asp-action="Index" class="btn btn-outline-info"><i class="fa-solid fa-circle-arrow-left"></i> Back to list</a>
		</div>

	</form>
	</div>

</div>



@section Scripts {
			<script>
					 $(document).ready(function () {
							var output = document.getElementById('ProfilePicturePreview');
						output.src = $("#ProfilePictureURL").val();
					})

					$("#ProfilePictureURL").on("change", function () {
							var output = document.getElementById('ProfilePicturePreview');
						output.src = $(this).val();
					})

			</script>			
}